{
  "manifest_version": 3,
  "name": "Page Helper",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}